<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeLiveBrowser.Resources.Component"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="YoutubeLiveBrowser.Resources.Component.ImageListbox"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <ScrollViewer x:Name="scrollViewer1" VerticalScrollBarVisibility="Disabled" CanContentScroll="false" >
        <ListBox x:Name="SubscriptionListBox" 
             ItemsSource="{Binding ImageItems}" 
             mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,2,0,2" BorderBrush="AliceBlue" BorderThickness="1">
                        <Image Height="150" Source="{Binding}"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </ScrollViewer>
</UserControl>
